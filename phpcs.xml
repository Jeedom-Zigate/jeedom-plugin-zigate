<?xml version="1.0"?>
<ruleset name="jeedom-zigate">
    <description>The coding standard for jeedom-zigate</description>

    <file>./core</file>
    <file>./desktop</file>
    <file>./plugin_info</file>

    <exclude-pattern>./web/wp-content/themes/materialstyle/webpack.config.js</exclude-pattern>

    <arg name="report" value="full"/>
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>
    
    <rule ref="Generic.Files.LineLength">
      <properties>
        <property name="lineLimit" value="180"/>
        <property name="absoluteLineLimit" value="0"/>
      </properties>
    </rule>
</ruleset>